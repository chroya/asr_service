# 应用设置
APP_NAME=ASR Service
DEBUG=True

# 日志设置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(levelname)s] [%(name)s] %(message)s
LOG_DIR=logs
LOG_FILE=asr_service.log
LOG_BACKUP_COUNT=72
LOG_CONSOLE_OUTPUT=True

# 数据库设置
DATABASE_URL=sqlite:///./asr_service.db

# Redis设置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MQTT设置
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_CLIENT_ID=asr_service
MQTT_USERNAME=
MQTT_PASSWORD=

# 文件上传设置
UPLOAD_DIR=./uploads
TRANSCRIPTION_DIR=./transcriptions
MAX_UPLOAD_SIZE=25000000  # 25MB

# 用户限制设置 - 使用u_id控制限额
DEFAULT_USER_LIMIT_COUNT=10
DEFAULT_USER_LIMIT_DURATION=600  # 单位：秒

# 云端API设置
CLOUD_STATS_API_URL=https://api.example.com/stats
CLOUD_API_KEY=your_cloud_api_key

# WhisperX模型设置
WHISPER_MODEL_NAME=base
HF_TOKEN= 